.wrap {
    position: fixed;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    top: 0;
    left: 0; }
    .wrap:before {
      width: 100%;
      height: 100%;
      content: ' ';
      background-color: rgba(0, 0, 0, 0.5);
      display: block; }
    .wrap .inner {
      position: absolute;
      width: 100%;
      bottom: 0;
      left: 0;
      height: calc(350rpx*2);
      background-color: #fff;
      transform: translateY(100%); }
    .wrap .head {
      box-sizing: border-box;
      width: 100%;
      display: flex;
      flex-direction: row;
      align-items: center;
      height: calc(43rpx*2);
      border-bottom: 2rpx solid #eee;
      padding: 0 0 0 30rpx; }
      .wrap .head .title {
        flex: 1;
        font-size: 28rpx;
        color: #333; }
      .wrap .head .closeField {
        width: 62rpx;
        height: 62rpx;
        line-height: 62rpx;
        text-align: left; }
      .wrap .head .close {
        width: 32rpx;
        height: 32rpx; }
    .wrap .body {
      box-sizing: border-box;
      width: 100%;
      height: calc(305rpx*2);
      padding-left: 30rpx;
      overflow: scroll; }
